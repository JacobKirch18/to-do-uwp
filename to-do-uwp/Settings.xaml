<Page
    x:Class="to_do_uwp.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:to_do_uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <CommandBar HorizontalAlignment="Right">
            <AppBarButton Icon="Home" Label="Home" Click="HomeButton_Click" Width="85" />
            <AppBarButton Icon="Accept" Label="Completed" Click="CompletedTasksButton_Click" Width="85" />
            <AppBarButton Icon="Help" Label="About" Click="AboutButton_Click" Width="85" />
        </CommandBar>
        <TextBlock Text="Settings" FontSize="40" FontWeight="Bold" Margin="20" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Theme:" FontSize="20" FontWeight="Bold" Margin="20" VerticalAlignment="Center"/>
            <ComboBox x:Name="ThemeComboBox" Width="150" Margin="20" SelectionChanged="ThemeComboBox_SelectionChanged">
                <ComboBoxItem Content="Light" Tag="Light"/>
                <ComboBoxItem Content="Dark" Tag="Dark" />
                <ComboBoxItem Content="System Default" Tag="Default" />
            </ComboBox>
        </StackPanel>
    </StackPanel>
</Page>
