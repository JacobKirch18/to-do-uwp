<Page
    x:Class="to_do_uwp.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:to_do_uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <CommandBar HorizontalAlignment="Right">
            <AppBarButton Icon="Home" Label="Home" Click="HomeButton_Click" Width="85" />
            <AppBarButton Icon="Accept" Label="Completed" Click="CompletedTasksButton_Click" Width="85" />
            <AppBarButton Icon="Setting" Label="Settings" Click="SettingsButton_Click" Width="85" />
        </CommandBar>
        
        <StackPanel Margin="40" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="About" FontSize="40" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>
            
            <StackPanel Margin="0,20,0,0" MaxWidth="600">
                <TextBlock Text="To-Do UWP Application" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                
                <TextBlock Text="Version 1.0.0" FontSize="18" Margin="0,10,0,10" HorizontalAlignment="Center" Foreground="Gray"/>
                
                <TextBlock Text="A simple and efficient task management application for Windows 10/11." 
                          FontSize="16" Margin="0,20,0,10" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                
                <TextBlock Text="This Universal Windows Platform (UWP) application helps you organize your daily tasks with an intuitive interface. Add tasks, set due dates, and mark them as complete when finished."
                          FontSize="14" Margin="0,10,0,20" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Foreground="Gray"/>
                
                <Border BorderBrush="LightGray" BorderThickness="0,1,0,0" Margin="0,20,0,20"/>
                
                <TextBlock Text="Developer Information" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                
                <TextBlock Text="Developed as a Universal Windows Platform application" 
                          FontSize="14" Margin="0,5,0,5" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>

                <TextBlock Text="Built with XAML and C#" 
                          FontSize="14" Margin="0,5,0,15" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>    
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Kir" FontSize="12" FontWeight="Bold" Foreground="Gray" HorizontalAlignment="Center"/>
                        <TextBlock Text="Te" FontSize="12" FontWeight="Bold" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="CH" FontSize="18" FontWeight="Bold" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>
